<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hover state -->
    <item android:state_hovered="true">
        <shape>
            <solid android:color="#E0E0E0"/> <!-- Light gray for hover -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White for default -->
        </shape>
    </item>
</selector>
